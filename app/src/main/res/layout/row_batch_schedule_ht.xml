    <CheckBox
        android:id="@+id/selectedCB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/dateTimeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/m_lato_regular"
        android:gravity="center"
        android:text="Date &amp; Time"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />


    <TextView
        android:id="@+id/customerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_weight="1"
        android:fontFamily="@font/m_lato_regular"
        android:gravity="center"
        android:text="Customer Name"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />


    <TextView
        android:id="@+id/materialDetailsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/m_lato_regular"
        android:gravity="center"
        android:text="Material/Details"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />


    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/m_lato_regular"
        android:gravity="center"
        android:text="Quantity/Kgs"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etChargedQty"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:backgroundTint="@color/white"
        android:inputType="number"
        />


    <TextView
        android:id="@+id/process_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/m_lato_regular"
        android:gravity="center"
        android:text="Processname"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />


